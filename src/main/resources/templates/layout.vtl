<!DOCTYPE html>
<html>
  <head>
    <title>wise-commute</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/app.css">
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhaina" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>
  <body>
    <!-- begin inner template-->
   <div class="row">
     <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
     <div class="container">
       <div class="navbar-header">
         <h4 class="navbar-text visible-xs-inline-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block" id="navBarHeaderText">Wise Commute</h4>
         <h5 class="navbar-text visible-xs-inline-block visible-sm-inline-block visible-md-inline-block visible-lg-inline-block" id="navBarUserName">Hi, $newUser.getUsername()</h5>

         <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
           <span class="sr-only">Toggle navigation</span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
         </button>
       </div>
       <div id="navbar" class="navbar-collapse collapse">
         <ul class="nav navbar-nav ">
           <li class="active"><a href="/">Home</a></li>
           <li class="active"><a href="/logout">Log Out</a></li>
         </ul>
       </div>
     </div>
   </nav>
 </div>
 <div class="container submitReport">
   <button type="button" class="btn btn-lg" data-toggle="modal" data-target="#myModal" id="submitReportButton">Add Wisdom</button>
</div>

<!-- modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">

        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <form action="/addReport" method="post">
        <div class="modal-body">
          <div class="row">
            <h3 id="capacityRangeTitle"> Current Capacity</h3>
            <div class="col-xs-3">
              <h5 id="sliderLeft">Ghost Train</h5>
            </div>
            <div class="col-xs-6" id="sliderMiddle">
              <h5 >Half Full</h5>
            </div>
            <div class="col-xs-3">
              <h5 id="sliderRight">Sweaty Pits In Your Face</h5>
            </div>
          </div>
          <input type="range" name="trainCapacity" id="capacityRange" min="1" max="99">
          <div class="form-group" id="reportTrainAndStop">

            <select class="form-control" name="id_train" id="reportTrainSelected" required>
              <option value="">Choose A Train</option>
              <option id="blueGresham" value="101">Blue Line To Gresham</option>
              <option id="blueHillboror" value="102">Blue Line To Hillboro</option>
              <option id="greenCity" value="201">Green Line To City Center/PSU</option>
              <option id="greenClackamas" value="202">Green Line To Clackamas</option>
              <option id="orangeMilwaukie" value="301">Orange Line To Milwaukie</option>
              <option id="orangeCity" value="302">Orange Line To City Center</option>
              <option id="redBeaverton" value="401">Red Line To Beaverton</option>
              <option id="redPDX" value="402">Red Line To PDX</option>
              <option id="yellowExpo" value="501">Yellow Line To Expo Center</option>
              <option id="yellowCity" value="502">Yellow Line To City Center/PSU</option>
             </select>

             <select class="form-control" name="id_stop" id="reportTrainStopSelected" required>
               <option value="">Choose A Stop</option>
               <!-- Create Stop list based off train color -->
             </select>
           </div>
          <div class="form-group" >
            <textarea type="text" class="form-control" id="reportComment" name="reportComment" maxlength="140"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default" id="reportSubmitButton">Submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- modal -->


    <div class="container templateHolder">
      #parse( $template )
    </div>
    <div class="container">
      #parse( $report )
    </div>
    <!-- end inner template-->
    <script async defer src="http://maps.googleapis.com/maps/api/js?key=AIzaSyD-9gxmm_lwAob-yiYLqBuOLJ0tU_PxXYk&callback"></script>
  </body>
</html>
